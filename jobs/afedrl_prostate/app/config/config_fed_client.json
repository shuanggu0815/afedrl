{
    "format_version": 2,
    "executors": [
        {
            "tasks": [
                "train",
                "submit_model",
                "get_weights",
                "model_validate_for_hp_search",
                "train_and_validate"
            ],
            "executor": {
                "path": "trainer.autofedasync_learner_executor.AutoFedRLLearnerExecutor",
                "args": {
                    "learner_id": "cifar10-learner",
                    "search_space_id":"client_search_space"
                }
            }
        },
        {
            "tasks": [
                "validate"
            ],
            "executor": {
                "path": "trainer.cifar10validator.Cifar10Validator",
                "args": {}
            }
        }
    ],
    "task_result_filters": [],
    "task_data_filters": [],
    "components": [
        {
            "id": "cifar10-learner",
            "path": "trainer.autofedasync_cifar10_learner.CIFAR10AutoFedRLearner",
            "args": {
                "aggregation_epochs": 4,
                "lr": 1e-3
            }
        },
        {
            "id":"client_search_space",
            "path":"trainer.pt_autofedasync.PTAutoFedRLSearchSpace",
            "args":{
                "search_type": "cs",
                "device": "cpu",
                "optimizer_args": {
                    "path": "torch.optim.Adam",
                    "args": {
                        "lr": 0.01,
                        "betas": [
                            0.7,
                            0.7
                        ]
                    },
                    "config_type": "dict"
                },
                "n_clients": 1,
                "cutoff_interval":10,
                "search_lr": true,
                "lr_range": [
                    0.00001,
                    0.002
                ],
                "search_ne": true,
                "ne_range": [
                    1,
                    3
                ],
                "search_aw": true,
                "aw_range": [
                    0.2,
                    0.7
                ],
                "search_slr": false,
                "slr_range": [
                    0.5,
                    1.5
                ],
                "initial_precision": 1e10
            }
        }
    ]
}