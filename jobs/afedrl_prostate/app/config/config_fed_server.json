{
    "format_version": 2,
    "server": {
        "heart_beat_timeout": 600
    },
    "task_data_filters": [],
    "task_result_filters": [],
    "components": [
        {
            "id": "persistor",
            "path": "nvflare.app_opt.pt.file_model_persistor.PTFileModelPersistor",
            "args": {
                "model": {
                    "path": "trainer.unet.UNet",
                    "args": {
                      "in_channels": 1,
                      "out_channels": 2
                    }
                }
            }
        },
        {
            "id": "shareable_generator",
            "path": "nvflare.app_common.shareablegenerators.full_model_shareable_generator.FullModelShareableGenerator",
            "args": {}
        },
        {
            "id": "search_space",
            "path": "trainer.pt_autofedasync.PTAutoFedRLSearchSpace",
            "args": {
                "search_type": "cs",
                "device": "cpu",
                "optimizer_args": {
                    "path": "torch.optim.Adam",
                    "args": {
                        "lr": 0.01,
                        "betas": [
                            0.7,
                            0.7
                        ]
                    },
                    "config_type": "dict"
                },
                "n_clients": 8,
                "search_lr": false,
                "lr_range": [
                    0.0005,
                    0.05
                ],
                "search_ne": false,
                "ne_range": [
                    2,
                    40
                ],
                "search_aw": false,
                "aw_range": [
                    0.1,
                    1.0
                ],
                "search_slr": false,
                "slr_range": [
                    0.5,
                    1.5
                ],
                "initial_precision": 1e10
            }
        },
        {
            "id": "aggregator",
            "path": "aggregators.fedasync_aggregator.FedAsyncAggregator",
            "args": {
                "expected_data_kind": "WEIGHTS",
                "aggregation_weights": {
                    "site-1": 1.0,
                    "site-2": 1.0,
                    "site-3": 1.0,
                    "site-4": 1.0,
                    "site-5": 1.0,
                    "site-6": 1.0
                }
            }
        },
        {
            "id": "aggregator_search_val",
            "path": "aggregators.search_val_aggregator.SearchValAggregator",
            "args": {
                "expected_data_kind": "METRICS",
                "aggregation_weights": {
                    "site-1": 1.0,
                    "site-2": 1.0,
                    "site-3": 1.0,
                    "site-4": 1.0,
                    "site-5": 1.0,
                    "site-6": 1.0
                }
            }
        },
        {
            "id": "model_locator",
            "path": "utils.pt_model_locator.PTModelLocator",
            "args": {}
        },
        {
            "id": "json_generator",
            "path": "nvflare.app_common.widgets.validation_json_generator.ValidationJsonGenerator",
            "args": {}
        }
    ],
    "workflows": [
        {
            "id": "pre_train",
            "name": "InitializeGlobalWeights",
            "args": {
                "task_name": "get_weights"
            }
        },
        {
            "id": "scatter_and_gather_async",
            "path": "workflows.scatter_and_gather_async.ScatterAndGatherAsync",
            "args": {
                "min_clients": 6,
                "num_rounds": 1800,
                "start_round": 0,
                "wait_time_after_min_received": 10,
                "aggregator_id": "aggregator",
                "aggregator_search_val_id": "aggregator_search_val",
                "persistor_id": "persistor",
                "shareable_generator_id": "shareable_generator",
                "search_space_id": "search_space",
                "train_task_name": "train",
                "train_timeout": 0
            }
        },
        {
            "id": "cross_site_validate",
            "name": "CrossSiteModelEval",
            "args": {
                "model_locator_id": "model_locator",
                "submit_model_timeout": 1200,
                "validation_timeout": 12000
            }
        }
    ]
}